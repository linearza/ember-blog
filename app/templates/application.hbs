<div class="header">
  <h1>Linearza</h1>
  <span>Tips &amp; tricks on Emberjs and Rails</span>
</div>


<div class="posts-container">
  {{#each posts as |post|}}
    <div class="post">
      <h2>{{post.title}}</h2>
      <p>{{post.body}}</p>
      <p>{{post.createdAt}}</p>

      <button onclick={{action 'deletePost' post}}>x</button>
    </div>

  {{else}}
    <h2>No posts</h2>
  {{/each}}
  <button onclick={{action 'createPost'}}>Create post</button>
</div>



{{outlet}}


<div class="new-post">
  {{textarea value=newPostTitle class="title" placeholder="Title here..."}}<br >
  {{textarea value=newPostBody class="body" placeholder="Body content here..."}}

  <button onclick={{action 'savePost'}}>Save new post</button>
</div>