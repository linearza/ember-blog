<div class="post-content">
  {{#each posts as |post|}}
    <div class="post">
      <h2>{{post.title}}</h2>
      <p>{{post.body}}</p>
      <p>{{post.createdAt}}</p>

      <button onclick={{action 'deletePost' post}}>x</button>
    </div>

  {{else}}
    <h2>No posts</h2>
  {{/each}}
  <button onclick={{action 'createPost'}}>Create post</button>
</div>



{{outlet}}


<div class="new-post">
  {{textarea value=newPostTitle}}<br >
  {{textarea value=newPostBody}}

  <button onclick={{action 'savePost'}}>Save new post</button>
</div>