<div class="header">
  <h1>{{#link-to 'index'}}My blog title{{/link-to}}</h1>
  <span>My blog description</span>
</div>

<div class="posts-container">
  {{#each posts as |post|}}
    <div class="post {{if post.isDeleting 'is-deleting'}}">
      <h2 onclick={{action 'goToPost' post}}>{{post.title}}</h2>
      <p>{{post.body}}</p>
      <p>{{post.createdAt}}</p>

      {{#if session.isAuthenticated}}
        <button onclick={{action 'deletePost' post}} class="delete">x</button>
      {{/if}}
    </div>

  {{else}}
    <h2>No posts</h2>
  {{/each}}
</div>

{{#if session.isAuthenticated}}
  {{#x-writer as |writer|}}
    {{textarea value=writer.title class="title" placeholder="Title"}}
    {{textarea value=writer.body class="body" placeholder="Body"}}
  {{/x-writer}}
{{/if}}